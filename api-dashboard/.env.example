# FIDPS API Dashboard Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (Operational Data)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fidps_operational
POSTGRES_USER=fidps_user
POSTGRES_PASSWORD=fidps_password_2024
POSTGRES_MAX_CONNECTIONS=20
POSTGRES_MIN_CONNECTIONS=5

# MongoDB Configuration (Anomaly Logs)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=fidps_anomalies
MONGODB_USER=root
MONGODB_PASSWORD=fidps_mongo_password_2024
MONGODB_MAX_CONNECTIONS=10
MONGODB_MIN_CONNECTIONS=2

# Redis Configuration (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SENSOR_DATA_TOPIC=sensor-data
KAFKA_ANOMALY_ALERTS_TOPIC=anomaly-alerts
KAFKA_SYSTEM_STATUS_TOPIC=system-status
KAFKA_CONSUMER_GROUP_ID=fidps-dashboard
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_HEARTBEAT_INTERVAL_MS=10000

# =============================================================================
# API CONFIGURATION
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_DEBUG=false
API_TITLE=FIDPS Dashboard API
API_VERSION=1.0.0
API_DESCRIPTION=Formation Integrity Damage Prevention System Dashboard API

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60

# API Timeouts
API_REQUEST_TIMEOUT=30
API_KEEPALIVE_TIMEOUT=5

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

DASHBOARD_TITLE=FIDPS Dashboard
DASHBOARD_REFRESH_INTERVAL=5000
DASHBOARD_MAX_DATA_POINTS=100
DASHBOARD_CHART_UPDATE_INTERVAL=1000
DASHBOARD_ANOMALY_RETENTION_HOURS=24
DASHBOARD_DATA_RETENTION_HOURS=168

# Dashboard Features
DASHBOARD_ENABLE_REAL_TIME=true
DASHBOARD_ENABLE_HISTORICAL=true
DASHBOARD_ENABLE_EXPORT=true
DASHBOARD_ENABLE_NOTIFICATIONS=true

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_CONNECTION_TIMEOUT=60
WEBSOCKET_MESSAGE_QUEUE_SIZE=1000
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=10

# WebSocket Message Types
WEBSOCKET_ENABLE_SENSOR_DATA=true
WEBSOCKET_ENABLE_ANOMALY_ALERTS=true
WEBSOCKET_ENABLE_SYSTEM_STATUS=true
WEBSOCKET_ENABLE_DATA_QUALITY=true

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Prometheus Metrics
PROMETHEUS_METRICS_PORT=9091
PROMETHEUS_METRICS_PATH=/metrics
PROMETHEUS_ENABLE_METRICS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/dashboard.log
LOG_MAX_FILE_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_ROTATION=daily

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security Headers
SECURITY_ENABLE_HSTS=true
SECURITY_ENABLE_CSP=true
SECURITY_ENABLE_FRAME_OPTIONS=true

# Authentication (Future Implementation)
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24
# JWT_REFRESH_EXPIRATION_DAYS=7

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Connection Pooling
DB_POOL_SIZE=20
DB_POOL_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Caching
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
CACHE_ENABLE_COMPRESSION=true

# Data Processing
DATA_BATCH_SIZE=1000
DATA_PROCESSING_INTERVAL=5
DATA_AGGREGATION_WINDOW=60

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# ML Anomaly Detection Service
ML_SERVICE_URL=http://localhost:8080
ML_SERVICE_TIMEOUT=30
ML_SERVICE_RETRIES=3
ML_SERVICE_HEALTH_CHECK_INTERVAL=60

