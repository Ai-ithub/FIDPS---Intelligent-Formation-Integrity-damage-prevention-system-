# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Dashboard Features
FEATURE_REAL_TIME_CHARTS=true
FEATURE_HISTORICAL_DATA=true
FEATURE_ANOMALY_MANAGEMENT=true
FEATURE_DATA_EXPORT=true
FEATURE_SYSTEM_MONITORING=true
FEATURE_WELL_MANAGEMENT=true
FEATURE_DATA_QUALITY=true

# API Features
FEATURE_API_DOCS=true
FEATURE_API_METRICS=true
FEATURE_API_RATE_LIMITING=true
FEATURE_API_CACHING=true

# WebSocket Features
FEATURE_WEBSOCKET_COMPRESSION=true
FEATURE_WEBSOCKET_HEARTBEAT=true
FEATURE_WEBSOCKET_RECONNECT=true

