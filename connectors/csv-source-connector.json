{
  "name": "csv-source-connector",
  "config": {
    "connector.class": "com.github.jcustenborder.kafka.connect.spooldir.SpoolDirCsvSourceConnector",
    "tasks.max": "2",
    "input.path": "/data/csv/input",
    "finished.path": "/data/csv/processed",
    "error.path": "/data/csv/error",
    "input.file.pattern": ".*\\.csv",
    "halt.on.error": "false",
    "topic": "csv-mwd-lwd-data",
    "schema.generation.enabled": "true",
    "schema.generation.key.name": "com.fidps.mwd.lwd.Key",
    "schema.generation.value.name": "com.fidps.mwd.lwd.Value",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",
    "csv.first.row.as.header": "true",
    "csv.separator.char": "44",
    "csv.quote.char": "34",
    "csv.escape.char": "92",
    "csv.strict.quotes": "false",
    "csv.ignore.leading.whitespace": "true",
    "csv.ignore.quotations": "false",
    "csv.keep.carriage.return": "false",
    "csv.null.field.indicator": "EMPTY_SEPARATORS",
    "parser.timestamp.date.formats": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z',yyyy-MM-dd'T'HH:mm:ss'Z',yyyy-MM-dd HH:mm:ss,MM/dd/yyyy HH:mm:ss",
    "parser.timestamp.timezone": "UTC",
    "transforms": "AddTimestamp,AddMetadata,RouteByWell",
    "transforms.AddTimestamp.type": "org.apache.kafka.connect.transforms.InsertField$Value",
    "transforms.AddTimestamp.timestamp.field": "ingestion_timestamp",
    "transforms.AddMetadata.type": "org.apache.kafka.connect.transforms.InsertField$Value",
    "transforms.AddMetadata.static.field": "data_source",
    "transforms.AddMetadata.static.value": "csv_file",
    "transforms.RouteByWell.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.RouteByWell.regex": "csv-mwd-lwd-data",
    "transforms.RouteByWell.replacement": "mwd-lwd-well-${well_id:UNKNOWN}",
    "batch.size": "1000",
    "poll.interval.ms": "1000",
    "cleanup.policy.maintain.relative.path": "true",
    "topic.creation.enable": "true",
    "topic.creation.default.replication.factor": "1",
    "topic.creation.default.partitions": "3",
    "topic.creation.default.cleanup.policy": "delete",
    "topic.creation.default.retention.ms": "604800000",
    "topic.creation.default.compression.type": "snappy",
    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "errors.deadletterqueue.topic.name": "csv-dlq",
    "errors.deadletterqueue.topic.replication.factor": "1",
    "errors.deadletterqueue.context.headers.enable": "true",
    "predicates": "isValidRecord",
    "predicates.isValidRecord.type": "org.apache.kafka.connect.predicates.HasHeaderKey",
    "predicates.isValidRecord.name": "__connect.errors.exception.class.name",
    "predicates.isValidRecord.negate": "true",
    "csv.skip.messy.records": "true",
    "csv.charset": "UTF-8",
    "processing.file.extension": ".PROCESSING"
  }
}