# FIDPS Environment Configuration Example
# Copy this to .env and customize

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fidps_operational
POSTGRES_USER=fidps_user
POSTGRES_PASSWORD=change_me_in_production

# MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=fidps_anomalies
MONGODB_USER=fidps_admin
MONGODB_PASSWORD=change_me_in_production
MONGO_INITDB_ROOT_USERNAME=fidps_admin
MONGO_INITDB_ROOT_PASSWORD=change_me_in_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_in_production

# InfluxDB
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=change_me_in_production
INFLUXDB_ORG=fidps
INFLUXDB_BUCKET=fidps_metrics

# API
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ML Service
ML_API_PORT=8080
ML_PROMETHEUS_PORT=9094

# RTO Service
RTO_API_PORT=8002
RTO_METRICS_PORT=9095

# PDM Service  
PDM_API_PORT=8003
PDM_METRICS_PORT=9096

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change_me_in_production

# Frontend
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws
