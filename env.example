# FIDPS Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fidps_operational
POSTGRES_USER=fidps_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# MongoDB Configuration
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=fidps_anomalies
MONGODB_USER=fidps_admin
MONGODB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_ORG=fidps
INFLUXDB_BUCKET=fidps_metrics
INFLUXDB_USER=fidps_user
INFLUXDB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
INFLUXDB_TOKEN=CHANGE_THIS_SECURE_TOKEN

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=fidps-default

# MinIO Configuration
MINIO_ROOT_USER=fidps_minio_admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# API Dashboard Configuration
API_HOST=0.0.0.0
API_PORT=8000
ADMIN_PORT=8001
DASHBOARD_TITLE=FIDPS Dashboard
REFRESH_INTERVAL=30
MAX_CHART_POINTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# ML Service Configuration
ML_MODEL_PATH=/app/models
ML_CACHE_PATH=/app/cache
ML_LOG_LEVEL=INFO
ML_BATCH_SIZE=100
ML_PREDICTION_INTERVAL=30
ML_RETRAIN_INTERVAL=3600

# RTO Service Configuration
RTO_API_PORT=8002
RTO_METRICS_PORT=9095

# PDM Service Configuration
PDM_API_PORT=8003
PDM_METRICS_PORT=9096

# Monitoring Configuration
METRICS_PORT=9091
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost

# Frontend Configuration (for React app)
VITE_API_URL=http://localhost:8000/api/v1

# Database Connection Retry Configuration
DB_CONNECTION_RETRY_ATTEMPTS=5
DB_CONNECTION_RETRY_WAIT_SECONDS=5
DB_CONNECTION_POOL_MIN_SIZE=5
DB_CONNECTION_POOL_MAX_SIZE=20

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Production Settings
ENVIRONMENT=development
DEBUG=false

